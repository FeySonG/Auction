@model GetUserProfileDTO

<!DOCTYPE html>
<html>
<head>
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f5f5f5;
        }

        main {
            flex: 1;
        }

        .container {
            padding-bottom: 80px;
        }

        footer {
            position: relative;
            bottom: 0;
            width: 100%;
            height: 60px;
            background-color: #f8f9fa;
            text-align: center;
            line-height: 60px;
        }

        .profile-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .profile-header h1 {
                font-size: 2.5rem;
                margin-bottom: 0;
            }

            .profile-header p {
                font-size: 1.2rem;
                color: #6c757d;
            }

        .card-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .list-group-item {
            background-color: #fdfdfd;
        }

        .btn-primary, .btn-secondary {
            width: 100%;
            margin-top: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="profile-header">
            <h1>User Profile</h1>
            <p>@Model.NickName</p>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">Personal Information</h2>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>First Name:</strong> @Model.FirstName</li>
                    <li class="list-group-item"><strong>Last Name:</strong> @Model.LastName</li>
                    <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                </ul>
                <a class="btn btn-primary" href="@Url.Action("Update", "User")">Edit Personal Info</a>
            </div>
        </div>

        @if (Model.Contact != null)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Contact Information</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Phone:</strong> @Model.Contact.PhoneNumber</li>
                        <li class="list-group-item"><strong>Telegram:</strong> @Model.Contact.Telegram</li>
                        <li class="list-group-item"><strong>Instagram:</strong> @Model.Contact.Instagram</li>
                        <li class="list-group-item"><strong>Country:</strong> @Model.Contact.Country</li>
                        <li class="list-group-item"><strong>City:</strong> @Model.Contact.City</li>
                    </ul>
                    <a class="btn btn-primary" href="@Url.Action("Update", "UserContact")">Edit Contact Info</a>
                </div>
            </div>
        }
        else
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Contact Information</h2>
                    <p>No contact information available.</p>
                    <a class="btn btn-primary" href="@Url.Action("Create", "UserContact")">Add Contact Info</a>
                </div>
            </div>
        }

        @if (Model.BankCard != null)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Bank Card Information</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Card:</strong> @Model.BankCard.CardType</li>
                        <li class="list-group-item"><strong>Card Number:</strong> @Model.BankCard.CardNumber</li>
                        <li class="list-group-item"><strong>Expiry Date:</strong> @Model.BankCard.ExpiryDate</li>
                    </ul>
                    <a class="btn btn-primary" href="@Url.Action("Update", "PaymentCard")">Edit Payment Card Info</a>
                </div>
            </div>
        }
        else
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Bank Card Information</h2>
                    <p>No bank card information available.</p>
                    <a class="btn btn-primary" href="@Url.Action("Create", "PaymentCard")">Add Payment Card Info</a>
                </div>
            </div>
        }

        <div class="mt-3">
            <form method="post" asp-action="DeleteAccount">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete your account?')">Delete Account</button>
            </form>
           
            <a class="btn btn-secondary mt-2" href="@Url.Action("Logout", "Auth")">Log Out</a>

            <a class="btn btn-secondary mt-2" href="javascript:history.back()">Cancel</a>
        </div>
    </div>

    <footer>
        &copy; 2024 Auction
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
