@model List<GetProductAuctionDTO>

<!-- Main -->
<section id="main">
	<div class="container">
		<div class="row">
			<div class="col-8 col-12-medium">
				@foreach (var auction in Model)
				{
					<!-- Content -->
					<article class="box post">
						<a class="image featured" href="@Url.Action("GetById", "ProductAuction", new { id = auction.Id })">
							@if (auction.Product.ImagePath != string.Empty)
							{
								<img src="@auction.Product.ImagePath" alt="card image" />
							}
							else if (auction.Product.ImagePath == string.Empty)
							{
								<img src="/media/nophoto.jpg" alt="card image" />
							}
						</a>
						<header>
							<p>Лот номер: @auction.Id</p>
							<h2>@auction.Title</h2>
							<p>Старт торгов: @auction.StartTime</p>
							<p>Конец торгов: @auction.EndTime</p>
							<h3>Стартовая цена: @auction.StartingPrice</h3>
							<p>
								Описание: @auction.Description
							</p>
						</header>
						<footer>
							<a href="@Url.Action("GetById", "ProductAuction", new { id = auction.Id })" class="button alt">Участвовать</a>
						</footer>
					</article>

				}

			</div>
			<div class="col-4 col-12-medium">

				<!-- Sidebar -->
				<section class="box">
					<a href="#" class="image featured"><img src="/image/ClassicAuction2.jpeg" alt="" /></a>
					<header>
						<h3>Добавьте свой лот</h3>
					</header>
					<p>Планируйте и создайте собственный Аукционный лот для своих товаров! </p>
					<footer>
						<a class="button alt" asp-area="" asp-controller="ProductAuction" asp-action="GetUserProducts">Мои лоты</a>
					</footer>
				</section>


				<section class="box">
					<header>
						<h3>Категории</h3>
					</header>
					<p>Veroeros sed amet blandit consequat veroeros lorem blandit adipiscing et feugiat sed lorem consequat feugiat lorem dolore.</p>
					<ul class="divided">
						<li><a href="@Url.Action("Create", "ProductAuction")">Выставить лот</a></li>
						
					</ul>
				</section>

			</div>
		</div>
	</div>
</section>