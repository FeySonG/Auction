@model List<GetProductDTO>

<!-- Main -->
<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-4 col-12-medium">

                <!-- Sidebar -->
                <section class="box">
                    <header>
                        <h3>Категории</h3>
                    </header>
                    <ul class="divided">
                        <li><a href="#">Акции</a></li>
                        <li><a href="#">Одежда</a></li>
                        <li><a href="#">Бытовая техника</a></li>
                        <li><a href="#">Недвижимость</a></li>
                        <li><a href="#">Автомобили</a></li>
                        <li><a href="#">Для сада</a></li>
                    </ul>
                    <footer>
                        <a class="button alt" asp-area="" asp-controller="Product" asp-action="GetUserProducts">My Showcase</a>
                    </footer>
                </section>

            </div>
            <div class="col-8 col-12-medium imp-medium">
                <!-- Portfolio -->
                <section>
                    <header class="major">
                        <h2>Online Store</h2>
                    </header>
                    <div class="row">


                        @foreach (var product in Model)
                        {
                            <div class="col-4 col-6-medium col-12-small">
                                <section class="box">
                                    <a class="image featured" href="@Url.Action("GetById", "Product", new { id = product.Id })">
                                        @if (product.ImagePath != string.Empty)
                                        {
                                            <img src="@product.ImagePath" alt="card image" />
                                        }
                                        else if (product.ImagePath == string.Empty)
                                        {
                                            <img src="/media/nophoto.jpg" alt="card image" />
                                        }

                                    </a>

                                    <header>
                                        <h3>@product.ProductName</h3>
                                    </header>
                                    <p>@product.Price</p>
                                    <footer>
                                        <ul class="actions">
                                            <li><a href="#" class="button alt">Go to</a></li>
                                        </ul>
                                    </footer>
                                </section>
                            </div>
                          
                        }

                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="image/pic02.jpg" alt="" /></a>
                                <header>
                                    <h3>Ipsum feugiat et dolor</h3>
                                </header>
                                <p>Lorem ipsum dolor sit amet sit veroeros sed amet blandit consequat veroeros lorem blandit adipiscing et feugiat phasellus tempus dolore ipsum lorem dolore.</p>
                                <footer>
                                    <ul class="actions">
                                        <li><a href="#" class="button alt">Go to</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>

                    </div>
                </section>

            </div>
        </div>
    </div>
</section>











