@model List<GetProductDTO>

<!-- Main -->
<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-4 col-12-medium">

                <!-- Sidebar -->
                <section class="box">
                    <header>
                        <h3>Showcase setup</h3>
                    </header>
                    <ul class="divided">
                        <li><a href="@Url.Action("Create", "Product")">Add Product</a></li>
                        <li><a href="@Url.Action("Update", "Product")">Change Product</a></li>
                        
                    </ul>
                    <footer>
                        <a href="#" class="button alt">Put up for auction</a>
                    </footer>
                </section>

            </div>
            <div class="col-8 col-12-medium imp-medium">
                <!-- Portfolio -->
                <section>
                    <header class="major">
                        <h2>Online Store</h2>
                    </header>
                    <div class="row">


                        @foreach (var product in Model)
                        {
                            <div class="col-4 col-6-medium col-12-small">
                                <section class="box">
                                    <a class="image featured" href="@Url.Action("GetByIdUser", "Product", new { id = product.Id })">
                                        @if (product.ImagePath != string.Empty)
                                        {
                                            <img src="@product.ImagePath" alt="card image" />
                                        }
                                        else if (product.ImagePath == string.Empty)
                                        {
                                            <img src="/media/nophoto.jpg" alt="card image" />
                                        }

                                    </a>

                                    <header>
                                        <h3>@product.ProductName</h3>
                                    </header>
                                    <p>Цена :@product.Price сом</p>
                                    <footer>
                                        <ul class="actions">
                                            <li><a href="@Url.Action("GetByIdUser", "Product", new { id = product.Id })" class="button alt">Go to</a></li>
                                        </ul>
                                    </footer>
                                </section>
                            </div>

                        }
                    </div>
                </section>

            </div>
        </div>
    </div>
</section>


