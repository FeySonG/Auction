@model CreateProductDTO


<form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
    <div>
        <label>Name</label>
        <input class="form-control ml-2" type="text"
               placeholder="Name"
               asp-for="ProductName"
               required />
    </div>


    <div>
        <label>Description</label>
        <input class="form-control ml-2" type="text"
               placeholder="Description"
               asp-for="Description"
               required />
    </div>

    <div>
        <label>Quantity</label>
        <input class="form-control ml-2" type="number"
               placeholder="Quantity"
               asp-for="Quantity"
               required />
    </div>

    <div>
        <label>Price</label>
        <input class="form-control ml-2" type="number"
               placeholder="Price"
               asp-for="Price"
               required />
    </div>

    <div class="form-group">
        <label asp-for="UploadFile" class="control-label">Image</label>
        <input name="UploadFile" type="file" class="form-control" />
    </div>

    @*     <div>
    <label>Last Name</label>
    <input class="form-control ml-2" type="text"
    placeholder="Last Name"
    asp-for="Category"
    required />
    </div> *@

    <button class="btn btn-primary mt-2" type="submit">Create</button>

</form>

<div class="text-center mt-5">
    <a class="btn btn-secondary btn-back" href="javascript:history.back()">Back</a>
</div>
